{% extends 'base.html.twig' %}

{% block title %}CSKS91 - Liste des Vidéos{% endblock %}

{% block body %}
    {{parent()}}
    <div class="p-3">
    {% for line in videos %}
        <div>
            <div class="row">
                <div class="col-5">
                    <h3>{{ line.getTitle() }}</h3>
                </div>
                <div class="col"><p>Publié le {{ line.getDate()|date('d/m/y') }}</p></div>
            </div>
            <div class="row">
                <div class="col-5">
                    <iframe width="420" height="315" src="{{line.getLink()}}">
                    </iframe>
                </div>
                <div class ="col">
                    <p>{{ line.getDescription() }}</p>
                    <a href="{{ path('video_render', {slug:line.getSlug()}) }}">Lire</a>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="col-1 mx-auto">
        {% if max is not null and max > 0 %}
            <button href="{{ path('video', {max:max-20}) }}"><i class="fa fa-angle-left"></i></button>
        {% endif %}
        {{ max }}
        <button href="{{ path('video', {max:max+20}) }}"><i class="fa fa-angle-right"></i></button>

    </div>
    </div>
{% endblock %}
