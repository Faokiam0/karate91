{% extends 'redactor/base.html.twig' %}

{% block title %}CSKS91 Admin - Éditer vos articles{% endblock %}

{% block body %}

<div class="container">
    {{parent()}}
    <div class="p-3">
    <h2>Listes des articles</h2>
    <table class="table table-bordered table-hover table-sm text-center">
            <thead>
                <tr>
                    <th scope="col">N°</th>
                    <th scope="col">Titre</th>
                    <th scope="col" class="d-sm-block d-none">Description</th>
                    <th scope="col">Date</th>
                    <th scope="col"><a href="{{path('redactor_blogs_create')}}"><i class="fas fa-plus"/></a></th>
                </tr>
            </thead>
            <tbody>
                {% for article in blog %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.title }}</td>
                        <td class="d-sm-block d-none">{{ article.content | raw}}</td>
                        <td>{{ article.date|date("m/d/Y")}}</td>
                        <td>
                            <a href="{{path('redactor_blogs_update',{id:article.id})}}">
                                <!--span class="d-lg-inline-block d-none">Modifier</span-->
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="{{path('redactor_blogs_delete',{id:article.id})}}">
                                <!--span class="d-lg-inline-block d-none">Supprimer</span-->
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
