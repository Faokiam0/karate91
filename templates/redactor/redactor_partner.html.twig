{% extends 'redactor/base.html.twig' %}

{% block title %}Hello RedactorPartnerController!{% endblock %}

{% block body %}
<div class="container">
    {{parent()}}
    <h2>Listes des partenaires</h2>
    <table class="table table-bordered table-hover table-sm text-center">
            <thead>
                <tr>
                    <th scope="col">NÂ°</th>
                    <th scope="col">Nom</th>
                    <th scope="col" class="d-lg-block d-none">Lien</th>
                    <th scope="col">Logo</th>
                    <th scope="col"><a href="{{path('redactor_blogs_create')}}"><i class="fas fa-plus"/></a></th>
                </tr>
            </thead>
            <tbody>
                {% for partner in partners %}
                    <tr>
                        <td>{{ partner.id }}</td>
                        <td>{{ partner.title }}</td>
                        <td class="d-lg-block d-none">{{ partner.description }}</td>
                        <td>{{ partner.date|date("m/d/Y")}}</td>
                        <td>
                            <a href="{{partner.link}}">
                                <!--span class="d-lg-inline-block d-none">Supprimer</span-->
                                <i class="fas fa-play"></i>
                            </a>
                            <a href="{{path('redactor_partners_update',{id:partner.id})}}">
                                <!--span class="d-lg-inline-block d-none">Modifier</span-->
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="{{path('redactor_partners_delete',{id:partner.id})}}">
                                <!--span class="d-lg-inline-block d-none">Supprimer</span-->
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
</div>
{% endblock %}
